<!-- //banner -->

<div class="about-color py-lg-4 py-md-3 py-sm-3 py-3" style="margin-top: 10px !important;">
    <div align="center" class="container-fluid py-lg-5 py-md-5 py-sm-4 py-3">
        <div class="row">
            <div align="center" class="title clr col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h4 style="color:#000000; font-size: 20px;font-weight: bold;font-style: normal;padding: 20px 0px 0px 0px; font-family: 'Roboto', sans-serif;">LATEST NEWS</h4>

                @if (@ViewBag.key.Count > 0)
                {
                    @foreach (var item in @ViewBag.key)
                    {
                        <div align="center" class="container col-lg-9 col-md-12 col-sm-12 col-xs-12 py-lg-5 py-md-5 py-sm-4 py-3" style="padding-top:50px !important; width:100% !important;">
                            <div class="row">
                                <div class="title clr col-lg-12 col-md-12 col-sm-12 col-xs-12" style="width:100% !important; color:#000000; font-size: 12px;font-weight: normal;font-family: 'Roboto', sans-serif;">
                                    @(Html.Raw(@item.Content))
                                    <h4 class="more"><a href="@Url.Action("NewsBlogDetail", "News", new { id = @item.Id })">Read more</a></h4>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No News Available</p>
                }
                <ul align="center" class="classified_list" style="color:#ffffff; font-size: 13px;font-weight: normal;font-style: normal;padding: 20px 0px; font-family: 'Roboto', sans-serif; text-transform:uppercase;">
                    @{
                        @if (@ViewBag.key.Count > 0)
                        {
                            @if (@ViewBag.key[0].keywords.Count > 0)
                            {

                                @foreach (var key in @ViewBag.key[0].keywords)
                                {
                                    <li style="margin: 10px;"><a href="@Url.Action("GetKeywordDetails", "News", new { key = @key })" style="color:#ffffff; font-size: 13px;font-weight: normal;font-style: normal;padding: 5px 10px; font-family: 'Roboto', sans-serif; text-transform:uppercase;background-color:#0F3E55;">@key</a></li>
                                }
                            }
                        }
                    }

                </ul>
            </div>
        </div>
    </div>
</div>


<script src="~/web/js/jquery-2.2.3.min.js"></script>
